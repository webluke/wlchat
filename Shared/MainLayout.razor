@inherits LayoutComponentBase

<PageTitle>wl.chat</PageTitle>

<div class="chat-page">
    <aside class="sidebar">
      <div class="sidebar-header">
        <span class="site-logo">💬</span>
        <span class="site-name">chat.webluke.net</span>
      </div>
      <AuthorizeView>
        <Authorized>
          <a class="new-chat-btn" href="/chat">
            <span class="emoji">➕</span> New Chat
          </a>
        </Authorized>
        <NotAuthorized>
            <a class="new-chat-btn" href="login">Login</a>
            <a class="new-chat-btn" href="signup">Sign Up</a>
        </NotAuthorized>
      </AuthorizeView>
      <NavMenu />
    </aside>
    <main class="main-chat">
        @Body
    </main>
</div>
